{

  "manifest_version": 2,
  "name": "my URL shortener",
  "version": "1.0",

  "description": "My URL shortener",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "icons": {
    "48": "icons/border-48.png"
  },
  // to fix cors error
  "permissions": [
    "activeTab", "clipboardWrite", "*://is.gd/*", "*://chart.googleapis.com/*"
  ],
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "myUrlShortener",
    "default_popup": "popup/choose_beast.html"
  },

  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ]
}
